      <div class="bg-white rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-8 group">
        <div class="w-16 h-16 bg-red-100 rounded-lg flex items-center justify-center mb-6 group-hover:bg-red-200 transition-colors duration-300">
