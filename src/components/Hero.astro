---
import { Image } from "astro:assets";
import logo from "../assets/astro.svg";
---

<section 
  class="hero-section relative w-full h-screen pt-16 sm:pt-20 pb-8 sm:pb-10 overflow-hidden transition-colors duration-300 flex items-center"
  role="banner"
  aria-label="Sekcja główna - Frontend Developer Adrian"
>
  <!-- Enhanced gradient background with better performance -->
  <div class="absolute inset-0 bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-100"></div>
  
  <!-- Grid pattern overlay for texture -->
  <div class="absolute inset-0 opacity-[0.02]" style="background-image: radial-gradient(circle at 1px 1px, #000 1px, transparent 0); background-size: 40px 40px;"></div>
  <!-- Enhanced background decoration with better performance -->
  <div class="absolute inset-0 opacity-5 hidden md:block will-change-transform">
    <div class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-r from-blue-400 to-blue-500 rounded-full mix-blend-multiply filter blur-xl animate-blob"></div>
    <div class="absolute top-40 right-10 w-72 h-72 bg-gradient-to-r from-purple-400 to-purple-500 rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-2000"></div>
    <div class="absolute bottom-3 left-20 w-72 h-72 bg-gradient-to-r from-indigo-400 to-indigo-500 rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 2xl:px-4 flex flex-col-reverse lg:flex-row items-center justify-center gap-8 lg:gap-12 2xl:gap-16 h-full">
    <!-- Enhanced Text Section -->
    <div class="flex-1 text-center lg:text-left space-y-6 lg:space-y-8 animate-fade-in max-w-2xl lg:max-w-none">
      
      <!-- Enhanced main heading with stronger value proposition -->
      <h1 
        class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-black text-gray-900 leading-[1.1] tracking-tight space-y-2"
        role="heading"
        aria-level="1"
      >
        <span class="block">Zamieniam <span class="relative inline-block group">
          <span class="bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 bg-clip-text text-transparent animate-gradient group-hover:scale-105 transition-transform duration-300">
            odwiedziny
          </span>
          <svg 
            class="absolute -bottom-2 left-0 w-full h-3 text-blue-300 opacity-70 group-hover:opacity-100 transition-opacity duration-300" 
            viewBox="0 0 100 12" 
            fill="currentColor" 
            preserveAspectRatio="none"
            aria-hidden="true"
          >
            <path d="M0,8 Q25,2 50,6 T100,4 L100,12 L0,12 Z" opacity="0.6"/>
          </svg>
        </span> w</span>
        <span class="block bg-gradient-to-r from-purple-600 via-pink-600 to-red-500 bg-clip-text text-transparent animate-gradient hover:scale-105 transition-transform duration-300 cursor-default">
          sprzedaż
        </span>
      </h1>

      <!-- Enhanced subtitle with concrete value proposition -->
      <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-600 max-w-2xl mx-auto lg:mx-0 leading-relaxed animate-slide-up">
        Tworzę 
        <span class="font-bold text-blue-700 relative group">
          strony internetowe i landing page'y
          <span class="absolute -bottom-1 left-0 w-full h-0.5 bg-blue-300 group-hover:h-1 transition-all duration-300"></span>
        </span> 
        z użyciem Vue, HTML, Tailwind CSS i Figma. 
        Łączę 4-letnie doświadczenie z kreatywnością i pasją do kodowania.
      </p>

      <!-- Enhanced stats with engaging and universal metrics -->
      <div 
        class="flex flex-wrap justify-center lg:justify-start gap-6 lg:gap-8 text-center animate-slide-up animation-delay-200"
        role="region"
        aria-label="Statystyki osiągnięć"
      >
        <div class="group cursor-default hover:scale-105 transition-transform duration-300">
          <div class="text-3xl lg:text-4xl font-bold text-blue-600 group-hover:text-blue-700 transition-colors duration-300">100%</div>
          <div class="text-sm text-gray-600 font-medium">Zaangażowania</div>
        </div>
        <div class="group cursor-default hover:scale-105 transition-transform duration-300">
          <div class="text-3xl lg:text-4xl font-bold text-purple-600 group-hover:text-purple-700 transition-colors duration-300">4+</div>
          <div class="text-sm text-gray-600 font-medium">Lat jako Frontend Dev</div>
        </div>
        <div class="group cursor-default hover:scale-105 transition-transform duration-300">
          <div class="text-3xl lg:text-4xl font-bold text-indigo-600 group-hover:text-indigo-700 transition-colors duration-300">24/7</div>
          <div class="text-sm text-gray-600 font-medium">Wsparcie</div>
        </div>
      </div>

      <!-- Enhanced CTA buttons with action-oriented copy -->
      <div 
        class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start animate-bounce-in animation-delay-300"
        role="group"
        aria-label="Główne akcje"
      >
        <a 
          href="#projects" 
          class="group relative inline-flex items-center justify-center px-10 py-5 bg-gradient-to-r from-blue-600 via-indigo-600 to-purple-600 text-white font-bold rounded-2xl shadow-xl hover:shadow-2xl focus:shadow-2xl transition-all duration-500 hover:scale-[1.02] active:scale-[0.98] focus:outline-none focus:ring-4 focus:ring-blue-400/50 overflow-hidden hover-lift transform"
          aria-label="Zobacz przykłady stron internetowych"
        >
          <!-- Animated background layer -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-700 via-indigo-700 to-purple-700 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <!-- Shimmer effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent scale-x-0 group-hover:scale-x-100 origin-left transition-transform duration-700 ease-out skew-x-12"></div>
          
          <!-- Ripple effect -->
          <div class="absolute inset-0 rounded-2xl border border-white/30 scale-100 group-hover:scale-110 opacity-100 group-hover:opacity-0 transition-all duration-500"></div>
          
          <span class="relative z-10 transition-transform duration-300 group-hover:translate-x-1 flex items-center">
            Zobacz portfolio
            <svg 
              class="ml-3 w-6 h-6 transition-all duration-300 group-hover:translate-x-2 group-hover:scale-110" 
              fill="none" 
              stroke="currentColor" 
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </span>
          
          <!-- Pulse effect on hover -->
          <div class="absolute inset-0 rounded-2xl bg-white/10 scale-0 group-hover:scale-100 group-hover:animate-ping opacity-75 transition-all duration-300"></div>
        </a>
        
        <a 
          href="#contact" 
          class="group relative inline-flex items-center justify-center px-10 py-5 bg-white/95 backdrop-blur-lg text-gray-800 font-bold rounded-2xl border-2 border-gray-200/80 shadow-xl hover:shadow-2xl hover:bg-white transition-all duration-500 hover:scale-[1.02] active:scale-[0.98] focus:outline-none focus:ring-4 focus:ring-indigo-400/50 hover-lift transform overflow-hidden"
          aria-label="Umów bezpłatną konsultację"
        >
          <!-- Gradient border effect -->
          <div class="absolute inset-0 rounded-2xl bg-gradient-to-r from-blue-500 via-purple-500 to-indigo-500 opacity-0 group-hover:opacity-100 transition-opacity duration-500 p-0.5">
            <div class="w-full h-full bg-white rounded-2xl"></div>
          </div>
          
          <!-- Hover background -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-50 via-purple-50 to-indigo-50 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-2xl"></div>
          
          <!-- Icon with enhanced animation -->
          <div class="relative z-10 flex items-center">
            <div class="relative mr-3">
              <svg 
                class="w-6 h-6 transition-all duration-500 group-hover:scale-125 group-hover:rotate-12" 
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              <!-- Notification dot -->
              <div class="absolute -top-1 -right-1 w-3 h-3 bg-green-500 rounded-full border-2 border-white animate-pulse group-hover:scale-125 transition-transform duration-300"></div>
            </div>
            
            <span class="transition-all duration-300 group-hover:translate-x-1 bg-gradient-to-r from-gray-800 to-gray-900 bg-clip-text text-transparent group-hover:from-blue-700 group-hover:to-purple-700">
              Bezpłatna konsultacja
            </span>
          </div>
          
        </a>
      </div>
    </div>

    <!-- Enhanced Image Section -->
    <div class="flex-1 flex justify-center items-center lg:justify-end mb-8 lg:mb-0">
      <div class="relative group transform hover:scale-105 transition-transform duration-500">
        <!-- Enhanced glowing effect -->
        <div class="absolute inset-0 bg-gradient-to-r from-blue-400 via-purple-400 to-indigo-400 rounded-full blur-3xl opacity-20 scale-110 animate-pulse-glow hidden sm:block group-hover:scale-125 transition-transform duration-700"></div>
        
        <!-- Main image container with improved styling -->
        <div 
          class="relative z-10 p-6 sm:p-8 bg-white/20 backdrop-blur-md rounded-3xl border border-white/30 shadow-2xl animate-float hidden md:block group-hover:scale-105 transition-all duration-500" 
          style="margin-top:2rem;"
          role="img"
          aria-label="Adrian - twórca stron internetowych"
        >
          <Image 
            src={logo} 
            alt="Adrian - Frontend Developer tworzący strony internetowe w React i Vue.js" 
            class="w-32 sm:w-48 md:w-64 lg:w-72 drop-shadow-2xl transition-transform duration-500 group-hover:rotate-3" 
            loading="eager"
            decoding="async"
          />
        </div>
        
        <!-- Enhanced floating elements with better positioning -->
        <div class="absolute -top-6 -right-6 w-20 h-20 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl opacity-80 animate-bounce-slow hidden sm:block group-hover:rotate-12 transition-transform duration-500 shadow-lg shadow-blue-500/30"></div>
        <div class="absolute -bottom-8 -left-8 w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-full opacity-70 animate-bounce-slow animation-delay-1000 hidden sm:block group-hover:-rotate-12 transition-transform duration-500 shadow-lg shadow-purple-500/30"></div>
        <div class="absolute top-1/2 -right-10 w-12 h-12 bg-gradient-to-br from-indigo-400 to-indigo-500 rounded-lg opacity-70 animate-bounce-slow animation-delay-2000 hidden sm:block group-hover:rotate-45 transition-transform duration-500 shadow-lg shadow-indigo-500/30"></div>
        
        <!-- New: Orbit elements for enhanced visual interest -->
        <div class="absolute top-1/4 -left-12 w-8 h-8 bg-gradient-to-br from-pink-400 to-pink-500 rounded-full opacity-60 animate-orbit hidden lg:block"></div>
        <div class="absolute bottom-1/4 -right-14 w-6 h-6 bg-gradient-to-br from-cyan-400 to-cyan-500 rounded-full opacity-50 animate-orbit-reverse hidden lg:block"></div>
      </div>
    </div>
  </div>

  <!-- Enhanced scroll indicator with better accessibility -->
  <div 
    class="absolute left-1/2 bottom-6 -translate-x-1/2 flex flex-col items-center animate-fade-in z-20 group cursor-pointer"
    role="button"
    tabindex="0"
    aria-label="Zobacz przykłady stron internetowych"
    onclick="document.querySelector('#projects, #about, main > section:nth-child(2)')?.scrollIntoView({ behavior: 'smooth' })"
    onkeydown="if(event.key === 'Enter' || event.key === ' ') { event.preventDefault(); document.querySelector('#projects, #about, main > section:nth-child(2)')?.scrollIntoView({ behavior: 'smooth' }); }"
  >
    <span class="text-xs md:text-sm text-gray-500 mb-2 opacity-70 group-hover:opacity-100 transition-opacity duration-300 font-medium">Zobacz projekty</span>
    <div class="w-12 h-12 flex items-center justify-center rounded-full bg-white/30 backdrop-blur-sm border border-white/40 group-hover:bg-white/40 group-hover:scale-110 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-blue-400/50 shadow-lg">
      <svg 
        class="animate-bounce-slow text-blue-600 group-hover:text-blue-700 transition-colors duration-300" 
        width="20" 
        height="20" 
        viewBox="0 0 24 24" 
        fill="none" 
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
      >
        <path d="M12 5v14M12 19l-6-6M12 19l6-6" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  </div>
</section>
<style>
/* Enhanced keyframe animations with performance optimizations */
@keyframes fade-in {
  from { 
    opacity: 0; 
    transform: translateY(30px); 
  }
  to { 
    opacity: 1; 
    transform: translateY(0); 
  }
}

@keyframes slide-up {
  from { 
    opacity: 0; 
    transform: translateY(40px); 
  }
  to { 
    opacity: 1; 
    transform: translateY(0); 
  }
}

@keyframes bounce-in {
  0% { 
    transform: scale(0.8); 
    opacity: 0; 
  }
  60% { 
    transform: scale(1.05); 
    opacity: 1; 
  }
  100% { 
    transform: scale(1); 
  }
}

@keyframes float {
  0%, 100% { 
    transform: translateY(0px) rotate(0deg); 
  }
  33% { 
    transform: translateY(-10px) rotate(1deg); 
  }
  66% { 
    transform: translateY(-5px) rotate(-1deg); 
  }
}

@keyframes blob {
  0%, 100% {
    transform: translate(0px, 0px) scale(1);
    border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
  }
  33% {
    transform: translate(30px, -50px) scale(1.1);
    border-radius: 30% 60% 70% 40% / 50% 60% 30% 60%;
  }
  66% {
    transform: translate(-20px, 20px) scale(0.9);
    border-radius: 70% 30% 40% 60% / 40% 70% 60% 50%;
  }
}

@keyframes gradient {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

@keyframes bounce-slow {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  50% {
    transform: translateY(-20px) rotate(10deg);
  }
}

@keyframes pulse-glow {
  0%, 100% {
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.3);
    transform: scale(1);
  }
  50% {
    box-shadow: 0 0 40px rgba(59, 130, 246, 0.6), 0 0 60px rgba(147, 51, 234, 0.3);
    transform: scale(1.05);
  }
}

@keyframes orbit {
  0% {
    transform: rotate(0deg) translateX(60px) rotate(0deg);
  }
  100% {
    transform: rotate(360deg) translateX(60px) rotate(-360deg);
  }
}

@keyframes orbit-reverse {
  0% {
    transform: rotate(360deg) translateX(50px) rotate(-360deg);
  }
  100% {
    transform: rotate(0deg) translateX(50px) rotate(0deg);
  }
}

/* New advanced button animations */
@keyframes button-shimmer {
  0% {
    transform: translateX(-100%) skewX(-15deg);
  }
  100% {
    transform: translateX(100%) skewX(-15deg);
  }
}

@keyframes button-pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.7);
  }
  50% {
    transform: scale(1.02);
    box-shadow: 0 0 0 10px rgba(59, 130, 246, 0);
  }
}

@keyframes ripple {
  0% {
    transform: scale(0);
    opacity: 1;
  }
  100% {
    transform: scale(4);
    opacity: 0;
  }
}

@keyframes glow-pulse {
  0%, 100% {
    box-shadow: 
      0 0 20px rgba(59, 130, 246, 0.4),
      0 0 40px rgba(147, 51, 234, 0.2),
      inset 0 0 20px rgba(255, 255, 255, 0.1);
  }
  50% {
    box-shadow: 
      0 0 40px rgba(59, 130, 246, 0.8),
      0 0 80px rgba(147, 51, 234, 0.4),
      inset 0 0 30px rgba(255, 255, 255, 0.2);
  }
}

@keyframes slide-in-elastic {
  0% {
    transform: translateX(-100%) scale(0.8);
    opacity: 0;
  }
  70% {
    transform: translateX(10%) scale(1.1);
    opacity: 1;
  }
  100% {
    transform: translateX(0%) scale(1);
    opacity: 1;
  }
}

@keyframes bounce-gentle {
  0%, 20%, 53%, 80%, 100% {
    transform: translate3d(0, 0, 0);
  }
  40%, 43% {
    transform: translate3d(0, -8px, 0);
  }
  70% {
    transform: translate3d(0, -4px, 0);
  }
  90% {
    transform: translate3d(0, -2px, 0);
  }
}

/* New micro-interactions */
@keyframes heartbeat {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

@keyframes typing {
  from {
    width: 0;
  }
  to {
    width: 100%;
  }
}

@keyframes blink-caret {
  from, to {
    border-color: transparent;
  }
  50% {
    border-color: #3b82f6;
  }
}

@keyframes slide-in-bounce {
  0% {
    opacity: 0;
    transform: translateY(50px) scale(0.9);
  }
  50% {
    opacity: 1;
    transform: translateY(-10px) scale(1.05);
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
}

/* New shimmer effect for loading states */
@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

.animate-heartbeat {
  animation: heartbeat 2s ease-in-out infinite;
}

.animate-typing {
  animation: typing 3s steps(40, end), blink-caret 0.75s step-end infinite;
}

.animate-slide-in-bounce {
  animation: slide-in-bounce 1s cubic-bezier(0.68, -0.55, 0.27, 1.55) forwards;
}

.animate-button-pulse {
  animation: button-pulse 2s infinite;
}

.animate-button-shimmer {
  animation: button-shimmer 2s infinite;
}

.animate-ripple {
  animation: ripple 0.6s linear;
}

.animate-glow-pulse {
  animation: glow-pulse 3s ease-in-out infinite;
}

.animate-slide-in-elastic {
  animation: slide-in-elastic 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
}

.animate-bounce-gentle {
  animation: bounce-gentle 2s infinite;
}

/* New slide-in-from-left animation */
@keyframes slide-in-left {
  from {
    opacity: 0;
    transform: translateX(-50px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* Enhanced centering utilities */
.perfect-center {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.vertical-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 100vh;
}

/* Interactive hover effects */
.hover-lift {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.hover-lift:hover {
  transform: translateY(-4px);
  box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
}

/* New slide-in-from-right animation */
@keyframes slide-in-right {
  from {
    opacity: 0;
    transform: translateX(50px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

.animate-slide-up { 
  animation: slide-up 1s ease-out forwards; 
}

.animate-bounce-in { 
  animation: bounce-in 1s cubic-bezier(0.68, -0.55, 0.27, 1.55) forwards; 
}

.animate-float { 
  animation: float 6s ease-in-out infinite; 
}

.animate-blob {
  animation: blob 7s infinite;
  will-change: transform, border-radius;
}

.animate-gradient {
  background-size: 200% 200%;
  animation: gradient 3s ease infinite;
}

.animate-bounce-slow {
  animation: bounce-slow 3s ease-in-out infinite;
}

.animate-pulse-glow {
  animation: pulse-glow 2s ease-in-out infinite;
}

.animate-orbit {
  animation: orbit 20s linear infinite;
}

.animate-orbit-reverse {
  animation: orbit-reverse 25s linear infinite;
}

.animate-shimmer {
  animation: shimmer 2s ease-in-out infinite;
}

.animate-slide-in-left {
  animation: slide-in-left 0.8s ease-out forwards;
}

.animate-slide-in-right {
  animation: slide-in-right 0.8s ease-out forwards;
}

/* Enhanced animation delays */
.animation-delay-200 {
  animation-delay: 0.2s;
}

.animation-delay-300 {
  animation-delay: 0.3s;
}

.animation-delay-500 {
  animation-delay: 0.5s;
}

.animation-delay-700 {
  animation-delay: 0.7s;
}

.animation-delay-1000 {
  animation-delay: 1s;
}

.animation-delay-2000 {
  animation-delay: 2s;
}

.animation-delay-4000 {
  animation-delay: 4s;
}

/* Enhanced custom utilities */
.backdrop-blur-sm {
  backdrop-filter: blur(4px);
}

.backdrop-blur-md {
  backdrop-filter: blur(12px);
}

.backdrop-blur-lg {
  backdrop-filter: blur(16px);
}

/* Performance optimizations */
.will-change-transform {
  will-change: transform;
}

.will-change-auto {
  will-change: auto;
}

/* Accessibility improvements */
@media (prefers-reduced-motion: reduce) {
  .animate-fade-in,
  .animate-slide-up,
  .animate-bounce-in,
  .animate-float,
  .animate-blob,
  .animate-gradient,
  .animate-bounce-slow,
  .animate-pulse-glow,
  .animate-orbit,
  .animate-orbit-reverse,
  .animate-shimmer,
  .animate-slide-in-left,
  .animate-slide-in-right {
    animation: none !important;
  }
  
  * {
    transition: none !important;
  }
}

/* Dark mode optimizations */

/* Enhanced responsive improvements */
@media (max-width: 768px) {
  .animate-blob {
    display: none;
  }
  
  .hero-section {
    padding-top: 1.5rem !important;
    height: 100vh !important;
  }
  
  h1 {
    font-size: 2.25rem !important;
    line-height: 1.2 !important;
  }
  
  .text-xl, .md\:text-2xl {
    font-size: 1.125rem !important;
    line-height: 1.6 !important;
  }
  
  .gap-8 {
    gap: 2rem !important;
  }
  
  .space-y-8 > * + * {
    margin-top: 2rem !important;
  }
  
  .px-8 {
    padding-left: 1.5rem !important;
    padding-right: 1.5rem !important;
  }
  
  .py-4 {
    padding-top: 1rem !important;
    padding-bottom: 1rem !important;
  }
  
  /* Better centering on mobile */
  .flex-col-reverse {
    justify-content: center !important;
    text-align: center !important;
  }
