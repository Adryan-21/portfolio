  .nav-link.active[href="#projects"] {
    --active-bg: rgb(250 245 255);
    --active-bg-end: rgb(243 244 246);
    --active-color: rgb(147 51 234);
    --active-border: rgba(147, 51, 234, 0.2);
    --active-shadow: rgba(147, 51, 234, 0.1);
