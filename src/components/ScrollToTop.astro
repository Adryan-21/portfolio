<style>
@keyframes levitate {
  0% {
    transform: translateY(0);
    box-shadow: 0 4px 16px rgba(56,189,248,0.25), 0 2px 8px rgba(0,0,0,0.10);
  }
  50% {
    transform: translateY(-12px);
    box-shadow: 0 12px 36px rgba(56,189,248,0.35), 0 8px 24px rgba(0,0,0,0.12);
  }
  100% {
    transform: translateY(0);
    box-shadow: 0 4px 16px rgba(56,189,248,0.25), 0 2px 8px rgba(0,0,0,0.10);
  }
}

.scroll-to-top {
  position: fixed;
  bottom: 2rem;
  right: 2rem;
  width: 56px;
  height: 56px;
  background: linear-gradient(135deg, #38bdf8 0%, #0ea5e9 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 16px rgba(56,189,248,0.25), 0 2px 8px rgba(0,0,0,0.10);
  cursor: pointer;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s, transform 0.3s cubic-bezier(.4,2,.3,1), box-shadow 0.3s cubic-bezier(.4,2,.3,1), background 0.3s;
  z-index: 1000;
  font-size: 2rem;
  font-weight: bold;
  border: 2px solid #0ea5e9;
  animation: levitate 2.5s ease-in-out infinite;
}
.scroll-to-top.visible {
  opacity: 1;
  pointer-events: auto;
}
.scroll-to-top:hover {
  transform: translateY(-16px) scale(1.12);
  box-shadow: 0 16px 48px rgba(56,189,248,0.45), 0 12px 32px rgba(0,0,0,0.16);
  background: linear-gradient(135deg, #0ea5e9 0%, #38bdf8 100%);
  animation: none;
}
</style>

<div id="scrollToTop" class="scroll-to-top" aria-label="Powrót na górę" title="Powrót na górę">
  <svg width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
    <path d="M12 19V5M12 5L5 12M12 5L19 12" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</div>

<script>
if (typeof window !== 'undefined') {
  const btn = document.getElementById('scrollToTop');
  if (btn) {
    window.addEventListener('scroll', () => {
      if (window.scrollY > 300) {
        btn.classList.add('visible');
      } else {
        btn.classList.remove('visible');
      }
    });
    btn.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  }
}
</script>
