---
// About section component
---

<section id="about" class="relative py-12 md:py-20 bg-gradient-to-br from-slate-50 via-blue-50 to-indigo-200 overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0">
    <!-- Animated gradient orbs -->
    <div class="hidden md:block absolute top-20 left-10 w-96 h-96 bg-gradient-to-r from-blue-400 to-indigo-500 rounded-full mix-blend-multiply filter blur-3xl animate-blob opacity-60"></div>
    <div class="hidden md:block absolute top-60 right-20 w-96 h-96 bg-gradient-to-r from-purple-400 to-pink-500 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-2000 opacity-60"></div>
    <div class="hidden md:block absolute bottom-20 left-1/3 w-96 h-96 bg-gradient-to-r from-indigo-400 to-blue-500 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-4000 opacity-60"></div>
    <div class="hidden md:block absolute top-1/2 right-1/4 w-64 h-64 bg-gradient-to-r from-cyan-300 to-blue-400 rounded-full mix-blend-multiply filter blur-2xl animate-blob animation-delay-1000 opacity-55"></div>
    
    <!-- Additional large orbs for more coverage -->
    <div class="hidden md:block absolute top-0 left-1/2 w-80 h-80 bg-gradient-to-r from-violet-300 to-purple-400 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-3000 opacity-45"></div>
    <div class="hidden md:block absolute bottom-0 right-1/2 w-72 h-72 bg-gradient-to-r from-teal-300 to-cyan-400 rounded-full mix-blend-multiply filter blur-3xl animate-blob animation-delay-5000 opacity-45"></div>
    
    <!-- Geometric patterns -->
    <div class="hidden md:block absolute top-32 left-1/4 w-32 h-32 opacity-40">
      <div class="w-full h-full bg-gradient-to-br from-blue-500 to-indigo-600 transform rotate-45 rounded-lg animate-float-slow"></div>
    </div>
    <div class="hidden md:block absolute bottom-32 right-1/3 w-24 h-24 opacity-40">
      <div class="w-full h-full bg-gradient-to-br from-purple-500 to-pink-600 rounded-full animate-pulse-gentle animation-delay-2000"></div>
    </div>
    <div class="hidden md:block absolute top-1/2 left-20 w-16 h-16 opacity-40">
      <div class="w-full h-full bg-gradient-to-br from-indigo-500 to-blue-600 transform rotate-12 rounded-lg animate-drift animation-delay-3000"></div>
    </div>
    <div class="hidden md:block absolute top-20 right-1/4 w-20 h-20 opacity-35">
      <div class="w-full h-full bg-gradient-to-br from-cyan-400 to-blue-500 rounded-full animate-float animation-delay-1000"></div>
    </div>
    <div class="hidden md:block absolute bottom-40 left-1/2 w-28 h-28 opacity-35">
      <div class="w-full h-full bg-gradient-to-br from-violet-400 to-purple-500 transform rotate-45 rounded-2xl animate-pulse-gentle animation-delay-4000"></div>
    </div>
    
    <!-- Additional geometric shapes -->
    <div class="hidden md:block absolute top-10 left-10 w-12 h-12 opacity-30">
      <div class="w-full h-full bg-gradient-to-br from-rose-400 to-pink-500 rounded-full animate-drift animation-delay-1500"></div>
    </div>
    <div class="hidden md:block absolute bottom-10 right-10 w-14 h-14 opacity-30">
      <div class="w-full h-full bg-gradient-to-br from-emerald-400 to-teal-500 transform rotate-12 rounded-lg animate-float-slow animation-delay-2500"></div>
    </div>
    <div class="hidden md:block absolute top-1/3 right-10 w-18 h-18 opacity-25">
      <div class="w-full h-full bg-gradient-to-br from-amber-400 to-orange-500 rounded-full animate-pulse-gentle animation-delay-3500"></div>
    </div>
    
    <!-- Gradient mesh overlay -->
    <div class="absolute inset-0 bg-gradient-to-t from-white/30 via-transparent to-blue-50/50"></div>
    <div class="absolute inset-0 bg-gradient-to-br from-indigo-50/60 via-transparent to-purple-50/50"></div>
    
    <!-- Subtle light rays -->
    <!-- <div class="hidden md:block absolute top-0 left-1/4 w-px h-full bg-gradient-to-b from-blue-200/50 via-transparent to-transparent transform rotate-12"></div>
    <div class="hidden md:block absolute top-0 right-1/3 w-px h-full bg-gradient-to-b from-purple-200/50 via-transparent to-transparent transform -rotate-12"></div> -->
    
    <!-- Dot pattern -->
    <div class="hidden md:block absolute inset-0 opacity-[0.08]" style="background-image: radial-gradient(circle at 2px 2px, #4f46e5 1px, transparent 0); background-size: 40px 40px;"></div>
    
    <!-- Subtle grid lines -->
    <div class="hidden md:block absolute inset-0 opacity-[0.06]">
      <div class="h-full w-full" style="background-image: linear-gradient(rgba(79, 70, 229, 0.2) 1px, transparent 1px), linear-gradient(90deg, rgba(79, 70, 229, 0.2) 1px, transparent 1px); background-size: 60px 60px;"></div>
    </div>
    
    <!-- Floating particles -->
    <div class="hidden md:block absolute top-1/4 left-1/3 w-2 h-2 bg-blue-300 rounded-full animate-float opacity-60 animation-delay-1000"></div>
    <div class="hidden md:block absolute top-2/3 right-1/4 w-1 h-1 bg-purple-300 rounded-full animate-drift opacity-70 animation-delay-2000"></div>
    <div class="hidden md:block absolute bottom-1/4 left-1/2 w-1.5 h-1.5 bg-indigo-300 rounded-full animate-pulse-gentle opacity-65 animation-delay-3000"></div>
    <div class="hidden md:block absolute top-1/3 right-1/3 w-3 h-3 bg-cyan-200 rounded-full animate-float opacity-50 animation-delay-500"></div>
    <div class="hidden md:block absolute bottom-1/3 left-1/4 w-2.5 h-2.5 bg-violet-200 rounded-full animate-drift opacity-55 animation-delay-4000"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <!-- Section Header -->
    <div class="text-center mb-10 md:mb-16 animate-fade-in">
      <!-- Badge -->
      <div class="inline-flex items-center px-4 py-2 bg-white/60 backdrop-blur-sm rounded-full border border-blue-200 shadow-sm mb-6 animate-bounce-in">
        <span class="w-2 h-2 bg-blue-500 rounded-full mr-3 animate-pulse"></span>
        <span class="text-sm font-medium text-gray-700">Poznaj mnie lepiej</span>
      </div>

      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-black text-gray-900 mb-4 md:mb-6 leading-tight">
        O 
        <span class="relative inline-block">
          <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">mnie</span>
          <svg class="absolute -bottom-2 left-0 w-full h-3 text-blue-300" viewBox="0 0 100 12" fill="currentColor" preserveAspectRatio="none">
            <path d="M0,8 Q25,2 50,6 T100,4 L100,12 L0,12 Z" opacity="0.6"/>
          </svg>
        </span>
      </h2>
      <p class="text-base sm:text-lg md:text-2xl text-gray-600 max-w-3xl mx-auto leading-relaxed animate-slide-up">
        Pasjonat technologii tworzący <span class="font-bold text-blue-700 relative">cyfrowe doświadczenia<span class="absolute -bottom-1 left-0 w-full h-0.5 bg-blue-300"></span></span> od ponad 3 lat
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 md:gap-16 items-center animate-slide-up animation-delay-200">
      <!-- Profile Section -->
      <div class="order-2 lg:order-1 space-y-6 md:space-y-8 animate-slide-in-left">
        <!-- Main Description -->
        <div class="group relative bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 p-4 md:p-8 border border-white/20 hover:scale-105 hover:-translate-y-2 animate-bounce-in">
          <!-- Glow effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-400/20 to-indigo-400/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10"></div>
          
          <div class="relative z-10">
            <div class="w-16 h-16 md:w-20 md:h-20 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mb-4 md:mb-6 group-hover:scale-110 group-hover:rotate-6 transition-all duration-300 shadow-lg">
              <svg class="w-10 h-10 text-blue-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-2 md:mb-4 group-hover:text-blue-700 transition-colors duration-300">Frontend Developer & UI Designer</h3>
            <p class="text-gray-600 mb-4 md:mb-6 leading-relaxed text-base md:text-lg">
              Cześć! Jestem <span class="font-semibold text-blue-600">Adrian</span>, freelance frontend developer specjalizujący się w 
              <span class="font-semibold text-teal-600">React</span> i 
              <span class="font-semibold text-blue-600">Vue.js</span>. 
              Pomagam startupom i firmom tworzyć strony internetowe, które nie tylko pięknie wyglądają, 
              ale przede wszystkim <span class="font-bold text-purple-700">generują wyniki biznesowe</span>.
            </p>
            
            <!-- Key Points -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3 md:gap-4">
              <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Responsywny Design</h4>
                  <p class="text-sm text-gray-600">Idealne działanie na wszystkich urządzeniach</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Optymalizacja SEO</h4>
                  <p class="text-sm text-gray-600">Wysoka pozycja w wyszukiwarkach</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">UX/UI Design</h4>
                  <p class="text-sm text-gray-600">Intuicyjne i atrakcyjne interfejsy</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-8 h-8 bg-orange-100 rounded-full flex items-center justify-center flex-shrink-0">
                  <svg class="w-4 h-4 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <div>
                  <h4 class="font-semibold text-gray-900">Szybka Realizacja</h4>
                  <p class="text-sm text-gray-600">Terminowa dostawa projektów</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Skills Section -->
        <div class="group relative bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 p-4 md:p-8 border border-white/20 hover:scale-105 hover:-translate-y-2 animate-bounce-in animation-delay-100">
          <!-- Glow effect -->
          <div class="absolute inset-0 bg-gradient-to-r from-purple-400/20 to-pink-400/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10"></div>
          
          <div class="relative z-10">
            <div class="w-16 h-16 md:w-20 md:h-20 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mb-4 md:mb-6 group-hover:scale-110 group-hover:rotate-6 transition-all duration-300 shadow-lg">
              <svg class="w-10 h-10 text-purple-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
            </div>
            <h3 class="text-xl md:text-2xl font-bold text-gray-900 mb-4 md:mb-6 group-hover:text-purple-700 transition-colors duration-300">Główne technologie</h3>
            
            <div class="grid grid-cols-2 md:grid-cols-3 gap-2 md:gap-4">
              <div class="group/tech relative bg-white/90 backdrop-blur-sm rounded-xl p-4 shadow-sm border border-gray-100 hover:shadow-lg hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="text-center">
                  <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-lg mx-auto mb-3 flex items-center justify-center group-hover/tech:scale-110 transition-transform duration-300">
                    <span class="text-white font-bold text-lg">V</span>
                  </div>
                  <h4 class="font-semibold text-gray-900 group-hover/tech:text-green-600 transition-colors duration-300">Vue.js</h4>
                  <p class="text-xs text-gray-600">Frontend Framework</p>
                </div>
              </div>
              
              <div class="group/tech relative bg-white/90 backdrop-blur-sm rounded-xl p-4 shadow-sm border border-gray-100 hover:shadow-lg hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="text-center">
                  <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg mx-auto mb-3 flex items-center justify-center group-hover/tech:scale-110 transition-transform duration-300">
                    <span class="text-white font-bold text-lg">R</span>
                  </div>
                  <h4 class="font-semibold text-gray-900 group-hover/tech:text-blue-600 transition-colors duration-300">React</h4>
                  <p class="text-xs text-gray-600">UI Library</p>
                </div>
              </div>
              
              <div class="group/tech relative bg-white/90 backdrop-blur-sm rounded-xl p-4 shadow-sm border border-gray-100 hover:shadow-lg hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="text-center">
                  <div class="w-12 h-12 bg-gradient-to-br from-orange-400 to-orange-600 rounded-lg mx-auto mb-3 flex items-center justify-center group-hover/tech:scale-110 transition-transform duration-300">
                    <span class="text-white font-bold text-lg">A</span>
                  </div>
                  <h4 class="font-semibold text-gray-900 group-hover/tech:text-orange-600 transition-colors duration-300">Astro</h4>
                  <p class="text-xs text-gray-600">Static Site Generator</p>
                </div>
              </div>
              
              <div class="group/tech relative bg-white/90 backdrop-blur-sm rounded-xl p-4 shadow-sm border border-gray-100 hover:shadow-lg hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="text-center">
                  <div class="w-12 h-12 bg-gradient-to-br from-cyan-400 to-cyan-600 rounded-lg mx-auto mb-3 flex items-center justify-center group-hover/tech:scale-110 transition-transform duration-300">
                    <span class="text-white font-bold text-lg">T</span>
                  </div>
                  <h4 class="font-semibold text-gray-900 group-hover/tech:text-cyan-600 transition-colors duration-300">Tailwind</h4>
                  <p class="text-xs text-gray-600">CSS Framework</p>
                </div>
              </div>
              
              <div class="group/tech relative bg-white/90 backdrop-blur-sm rounded-xl p-4 shadow-sm border border-gray-100 hover:shadow-lg hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="text-center">
                  <div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-purple-600 rounded-lg mx-auto mb-3 flex items-center justify-center group-hover/tech:scale-110 transition-transform duration-300">
                    <span class="text-white font-bold text-lg">F</span>
                  </div>
                  <h4 class="font-semibold text-gray-900 group-hover/tech:text-purple-600 transition-colors duration-300">Figma</h4>
                  <p class="text-xs text-gray-600">Design Tool</p>
                </div>
              </div>
              
              <div class="group/tech relative bg-white/90 backdrop-blur-sm rounded-xl p-4 shadow-sm border border-gray-100 hover:shadow-lg hover:scale-105 transition-all duration-300 cursor-pointer">
                <div class="text-center">
                  <div class="w-12 h-12 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-lg mx-auto mb-3 flex items-center justify-center group-hover/tech:scale-110 transition-transform duration-300">
                    <span class="text-white font-bold text-lg">JS</span>
                  </div>
                  <h4 class="font-semibold text-gray-900 group-hover/tech:text-yellow-600 transition-colors duration-300">JavaScript</h4>
                  <p class="text-xs text-gray-600">Programming Language</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Avatar & Stats Section -->
      <div class="order-1 lg:order-2 flex flex-col items-center space-y-6 md:space-y-8 animate-slide-in-right">
        <!-- Enhanced Avatar -->
        <div class="relative group w-32 h-32 md:w-48 md:h-48">
          <!-- Glowing background -->
          <div class="absolute inset-0 bg-gradient-to-r from-blue-400 to-teal-400 rounded-full blur-2xl opacity-25 group-hover:opacity-40 transition-opacity duration-500 scale-110 animate-pulse-glow"></div>
          
          <!-- Main avatar -->
          <div class="relative z-10 w-32 h-32 md:w-48 md:h-48 bg-gradient-to-tr from-blue-500 via-teal-500 to-purple-500 rounded-full shadow-2xl flex items-center justify-center transform group-hover:scale-105 transition-transform duration-300 animate-float">
            <div class="w-28 h-28 md:w-44 md:h-44 bg-gradient-to-tr from-blue-400 to-teal-400 rounded-full flex items-center justify-center shadow-inner">
              <span class="text-white text-3xl md:text-6xl font-black select-none tracking-tight">AD</span>
            </div>
          </div>
          
          <!-- Floating decorations -->
          <div class="hidden md:block absolute -top-4 -right-4 w-16 h-16 bg-yellow-400 rounded-2xl opacity-80 animate-bounce-slow transform rotate-12"></div>
          <div class="hidden md:block absolute -bottom-6 -left-6 w-12 h-12 bg-pink-400 rounded-full opacity-70 animate-bounce-slow animation-delay-1000"></div>
          <div class="hidden md:block absolute top-1/4 -right-8 w-8 h-8 bg-green-400 rounded-lg opacity-60 animate-bounce-slow animation-delay-2000"></div>
        </div>

        <!-- Experience Stats -->
        <div class="grid grid-cols-3 gap-2 md:gap-6 w-full max-w-xs md:max-w-md animate-bounce-in animation-delay-200">
          <div class="group relative text-center bg-white/80 backdrop-blur-sm rounded-2xl p-3 md:p-6 shadow-xl border border-white/20 hover:shadow-2xl hover:scale-105 hover:-translate-y-2 transition-all duration-300">
            <!-- Glow effect -->
            <div class="absolute inset-0 bg-gradient-to-r from-blue-400/20 to-indigo-400/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10"></div>
            <div class="relative z-10">
              <div class="text-xl md:text-3xl font-black text-blue-600 mb-1 md:mb-2 group-hover:scale-110 transition-transform duration-300">50+</div>
              <div class="text-xs md:text-sm text-gray-600 font-medium">Ukończonych<br/>projektów</div>
            </div>
          </div>
          
          <div class="group relative text-center bg-white/80 backdrop-blur-sm rounded-2xl p-3 md:p-6 shadow-xl border border-white/20 hover:shadow-2xl hover:scale-105 hover:-translate-y-2 transition-all duration-300">
            <!-- Glow effect -->
            <div class="absolute inset-0 bg-gradient-to-r from-teal-400/20 to-cyan-400/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10"></div>
            <div class="relative z-10">
              <div class="text-xl md:text-3xl font-black text-teal-600 mb-1 md:mb-2 group-hover:scale-110 transition-transform duration-300">3+</div>
              <div class="text-xs md:text-sm text-gray-600 font-medium">Lata<br/>doświadczenia</div>
            </div>
          </div>
          
          <div class="group relative text-center bg-white/80 backdrop-blur-sm rounded-2xl p-3 md:p-6 shadow-xl border border-white/20 hover:shadow-2xl hover:scale-105 hover:-translate-y-2 transition-all duration-300">
            <!-- Glow effect -->
            <div class="absolute inset-0 bg-gradient-to-r from-purple-400/20 to-pink-400/20 rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10"></div>
            <div class="relative z-10">
              <div class="text-xl md:text-3xl font-black text-purple-600 mb-1 md:mb-2 group-hover:scale-110 transition-transform duration-300">99%</div>
              <div class="text-xs md:text-sm text-gray-600 font-medium">Zadowolonych<br/>klientów</div>
            </div>
          </div>
        </div>

        <!-- CTA -->
        <div class="w-full max-w-xs md:max-w-md animate-bounce-in animation-delay-300">
          <div class="relative group">
            <!-- Glow effect -->
            <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-2xl blur-xl opacity-75 group-hover:opacity-100 transition-opacity duration-500 animate-pulse-glow"></div>
            
            <a 
              href="#contact" 
              class="group/btn relative z-10 w-full inline-flex items-center justify-center px-4 py-3 md:px-8 md:py-4 bg-gradient-to-r from-blue-600 to-teal-600 text-white font-bold rounded-2xl shadow-2xl hover:shadow-xl transition-all duration-300 hover:scale-105 active:scale-95 focus:outline-none focus:ring-4 focus:ring-blue-400/50 text-base md:text-lg"
            >
              <svg class="mr-3 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
              Rozpocznijmy współpracę
              <svg class="ml-3 w-5 h-5 transition-transform group-hover/btn:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
              
              <div class="absolute inset-0 bg-gradient-to-r from-blue-700 to-teal-700 rounded-2xl opacity-0 group-hover/btn:opacity-100 transition-opacity duration-300"></div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
/* Keyframe animations */
@keyframes fade-in {
